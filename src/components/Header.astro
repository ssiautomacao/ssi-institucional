---
import { Menu, X } from 'lucide-react';
---

<header id="main-header" class="fixed top-0 w-full z-50 transition-all duration-300 bg-transparent text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="#" class="flex items-center gap-2 hover:opacity-80 transition">
          <img src="/assets/logo.png" alt="SSI Engenharia" class="h-10 w-auto" />
          <!-- Fallback text hidden if logo loads, or kept for SEO -->
          <span class="sr-only">SSI Engenharia</span>
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex space-x-8">
        <a href="#home" class="text-sm font-medium hover:text-blue-300 transition">Home</a>
        <a href="#nr12" class="text-sm font-medium hover:text-blue-300 transition">NR-12</a>
        <a href="#laudos" class="text-sm font-medium hover:text-blue-300 transition">Laudos</a>
        <a href="#contact" class="text-sm font-medium hover:text-blue-300 transition">Contato</a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="mobile-menu-btn" class="p-2 rounded-md hover:bg-white/10 transition">
          <Menu className="w-6 h-6" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="hidden md:hidden bg-slate-900/95 backdrop-blur-sm absolute top-20 left-0 w-full border-t border-slate-700">
    <div class="px-4 pt-2 pb-6 space-y-2">
      <a href="#home" class="block py-2 text-base font-medium hover:text-blue-300">Home</a>
      <a href="#nr12" class="block py-2 text-base font-medium hover:text-blue-300">NR-12</a>
      <a href="#laudos" class="block py-2 text-base font-medium hover:text-blue-300">Laudos</a>
      <a href="#contact" class="block py-2 text-base font-medium hover:text-blue-300">Contato</a>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  // Scroll visibility logic
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.remove('bg-transparent', 'py-4');
      header?.classList.add('bg-slate-900', 'shadow-lg', 'py-0');
    } else {
      header?.classList.add('bg-transparent', 'py-4');
      header?.classList.remove('bg-slate-900', 'shadow-lg', 'py-0');
    }
  });

  // Mobile menu toggle
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
