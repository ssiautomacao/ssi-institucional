---
import { Menu, X } from 'lucide-react';

---

<header id="main-header" class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-md shadow-sm border-b border-slate-200 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="#" class="flex items-center gap-2">
          <img src="/ssi-institucional/assets/logo.png" alt="SSI Engenharia" class="h-12 w-auto" />
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#home" class="text-sm font-semibold text-slate-600 hover:text-[#004A99] transition tracking-wide uppercase">Home</a>
        <a href="#solutions" class="text-sm font-semibold text-slate-600 hover:text-[#004A99] transition tracking-wide uppercase">Serviços</a>
        <a href="#about" class="text-sm font-semibold text-slate-600 hover:text-[#004A99] transition tracking-wide uppercase">Sobre Nós</a>
        
        <a href="#contact" class="px-6 py-2.5 bg-[#004A99] hover:bg-blue-800 text-white rounded shadow transition-all font-bold text-sm uppercase tracking-wide">
            Falar com Especialista
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-btn" class="p-2 rounded-md text-slate-600 hover:bg-slate-100 transition">
            <Menu className="w-6 h-6" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="hidden md:hidden bg-white w-full border-t border-slate-100 absolute top-20 left-0 shadow-lg">
    <div class="px-6 py-8 space-y-4 text-center">
      <a href="#home" class="block py-2 text-lg font-medium text-slate-800 hover:text-[#004A99]">Home</a>
      <a href="#solutions" class="block py-2 text-lg font-medium text-slate-800 hover:text-[#004A99]">Serviços</a>
      <a href="#about" class="block py-2 text-lg font-medium text-slate-800 hover:text-[#004A99]">Sobre Nós</a>
      <a href="#contact" class="inline-block px-8 py-3 bg-[#004A99] text-white rounded font-bold mt-4 w-full">Falar com Especialista</a>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const closeMenuBtn = document.getElementById('close-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuLinks = mobileMenu?.querySelectorAll('a'); // Close menu on link click

  // Scroll visibility logic
  window.addEventListener('scroll', () => {
    // Only apply background if NOT mobile menu open (simplified for now)
    if (window.scrollY > 50) {
      header?.classList.remove('bg-transparent', 'py-4');
    } else {
      header?.classList.add('bg-transparent');
    }
  });

  // Mobile menu toggle
  const toggleMenu = () => {
      mobileMenu?.classList.toggle('hidden');
      document.body.classList.toggle('overflow-hidden'); // Prevent scrolling
  };

  mobileMenuBtn?.addEventListener('click', toggleMenu);
  closeMenuBtn?.addEventListener('click', toggleMenu);
  
  menuLinks?.forEach(link => {
      link.addEventListener('click', toggleMenu);
  });
</script>
