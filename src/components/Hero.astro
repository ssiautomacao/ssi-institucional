<section id="home" class="relative h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/ssi-institucional/assets/hero-bg-real.jpg" 
      alt="Ambiente industrial de alta tecnologia" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-slate-900/70"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-5xl mx-auto">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white tracking-tight mb-6">
      Engenharia de Segurança e <br class="hidden sm:block" />
      <span class="text-blue-400">Soluções Industriais</span>
    </h1>
    
    <p class="text-xl sm:text-2xl text-slate-200 font-light mb-10 max-w-3xl mx-auto leading-relaxed">
      Conformidade normativa com rigor técnico e rastreabilidade total.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="#contact" class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold transition shadow-lg hover:shadow-blue-500/20 text-lg">
        Solicitar Orçamento
      </a>
      <a href="#services" class="px-8 py-4 bg-white/10 hover:bg-white/20 text-white border border-white/30 rounded-lg font-semibold transition backdrop-blur-sm text-lg">
        Conhecer Serviços
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
