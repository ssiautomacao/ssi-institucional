---
import HeadSEO from '../components/HeadSEO.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
	title: string;
    lang?: string;
}

const { title, lang = 'pt' } = Astro.props;
const currentSlug = Astro.url.pathname;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="SSI Engenharia - Consultoria Especializada em NR-12 e SeguranÃ§a do Trabalho" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        
        <!-- SEO System -->
        <HeadSEO activeLang={lang} currentSlug={currentSlug} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title} | SSI Engenharia</title>
        <ViewTransitions />
	</head>
	<body class="bg-white text-slate-800 font-sans antialiased selection:bg-blue-900 selection:text-white overflow-x-hidden">
		<slot />

        <script>
            // Fade-in animation observer
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target); // Only animate once
                    }
                });
            }, observerOptions);

            document.addEventListener('astro:page-load', () => {
                const fadeElements = document.querySelectorAll('.fade-in');
                fadeElements.forEach(el => observer.observe(el));
            });
        </script>
	</body>
</html>

<style is:global>
    /* Global font setup & Variables */
    :root {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        --font-display: 'Montserrat', system-ui, sans-serif;
        
        --color-ssi-blue: #004A99;
        --color-slate-dark: #1e293b;
        --color-white: #FFFFFF;
        
        --bg-body: #FFFFFF;
    }
    
    h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-display);
        color: var(--color-slate-dark);
    }
    
    .fade-in {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        will-change: opacity, transform;
    }

    .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
    }
</style>
